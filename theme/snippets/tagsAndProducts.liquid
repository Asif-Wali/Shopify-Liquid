<link rel="stylesheet" href="{{ 'swiper.css' | asset_url }}">

{% assign faceCollection = collections['Face'] %}
{% assign hairCollection = collections['Hair'] %}
{% assign bodyCollection = collections['Body'] %}

<div class="tagsAndProducts">
  <div class="productTags">
    <div class="FaceTag active">
      <img
        src="{{ 'Component 14.png' | asset_url }}"
        alt="TagPic"
        width=""
        height="" />
      <p>FACE</p>
    </div>
    <div class="HairTag">
      <img
        src="{{ 'Component 15.png' | asset_url }}"
        alt="TagPic"
        width=""
        height="" />
      <p>HAIR</p>
    </div>
    <div class="BodyTag">
      <img
        src="{{ 'Component 16.png' | asset_url }}"
        alt="TagPic"
        width=""
        height="" />
      <p>BODY</p>
    </div>
  </div>

  <div class="ProductSliderContainer">
    <!-- Face Product Swiper -->
    <div class="faceSliderContainer">
      <div class="swiper myFaceProductSwiper">
        <div class="swiper-wrapper">
          {% for product in faceCollection.products limit: 8 %}
            <div class="swiper-slide">
              <div class="ProductCard">
                <img
                  src="{{ product.featured_image.src | image_url }}"
                  alt="{{ product.title }}"
                  width=""
                  height="" />
                <h4>{{ product.title }}</h4>
                <div>
                  <img
                    src="{{ '4.5 star rating.png' | asset_url }}"
                    alt=""
                    width=""
                    height="" />
                  <p>{{ product.reviews }}</p>
                </div>
                <p>₹{{ product.price }}</p>
                <button>
                  <a href="{{ product.url }}">ADD TO CART</a>
                </button>
              </div>
            </div>
          {% endfor %}
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
      </div>
      <button class="viewAllButton">
        <a href="{{ shop.url }}/collections/face">
          View All</a>
      </button>
    </div>


    <!-- Hair Product Swiper -->
    <div class="hairSliderContainer">
      <div class="swiper myHairProductSwiper">
        <div class="swiper-wrapper">
          {% for product in hairCollection.products limit: 8 %}
