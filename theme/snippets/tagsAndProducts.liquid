          {% endfor %}
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
      </div>
      <button class="viewAllButton">
        <a href="{{ shop.url }}/collections/hair">
          View All</a>
      </button>
    </div>


    <!-- Body Product Swiper -->
