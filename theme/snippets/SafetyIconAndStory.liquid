<link rel="stylesheet" href="{{ 'swiper.css' | asset_url }}">


<div class="SafteyIconStories">
  <div class="SafteySlogan">
    <h1>We seek the ancient. We seek the timeless.</h1>
    <h1>We seek the clean way.</h1>
    <p>
      Inspired from the ancient our products have a rare potency to enhance beauty because we do custom formulation, curate ingredients, test, manufacture, design packaging all at our very own licensed organic factory.
    </p>
  </div>

  <div class="swiper mySafteyIconSwiper">
    <div class="swiper-wrapper">
      {% for image in (63..71) %}
        <div class="swiper-slide">
          <div class="slide">
            <img
              src="{{ 'Component ' | append: image | append: '.svg' | asset_url }}"
              alt="slider"
              width=""
              height="" />
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="swiper-pagination"></div>

    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  </div>

</div>

<style>
  /* Timeless Slogan and Slider */
  .SafteyIconStories {
    max-width: 1240px;
    width: 100%;
    height: 211px;
    display: flex;
    margin: 10px auto auto;
    justify-content: center;
    align-items: center;
    padding-bottom: 10px;
  }

  .SafteyIconStories > .SafteySlogan {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 10px;
    text-align: center;
  }

  .SafteyIconStories > .SafteySlogan > h1 {
    font-family: "Amatic SC"
    , sans-serif;
    font-weight: 700;
    font-style: normal;
    color: #70645c;
    line-height: 1;
  }

  .SafteyIconStories > .SafteySlogan > h1:nth-child(1) {
    width: 594px;
    font-size: 48px;
  }

  .SafteyIconStories > .SafteySlogan > h1:nth-child(2) {
    width: 308px;
    font-size: 46px;
  }

  .SafteyIconStories > .SafteySlogan > p {
    font-family: "Playfair Display"
    , serif;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: italic;
    font-size: 16px;
    height: 89px;
    width: 593px;
  }

  .mySafteyIconSwiper {
    width: 100%;
    height: 100%;
    text-align: center;
    margin: auto auto auto 0;
    padding: 0 15px;
    transition: transform 0.6s ease-in-out;
  }

  .mySafteyIconSwiper > .swiper-wrapper > .swiper-slide {
    padding-bottom: 10px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .slide {
    width: 185px;
    height: 186px;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    border-radius: 5px;
    margin-bottom: 10px;
  }

  .slide > img {
    width: 145px;
    height: 145px;
    object-fit: cover;
    box-shadow: rgba(0, 0, 0, 0.1) 0 4px 12px;
