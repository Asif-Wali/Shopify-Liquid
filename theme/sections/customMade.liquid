<section>
  <div class="contentContainer">
    <div class="background"></div>
    <div class="content">
      <h1>Launching Soon</h1>
      <p>The possibilities to customise your skin care products</p>
    </div>
  </div>
</section>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  .contentContainer {
    width: 100%;
    height: 452px;
    position: relative;
  }

  .contentContainer > .background {
    position: absolute;
    top: 0;
    left: 20%;
    width: 60vw;
    height: 50vh;
    background-image: url("{{ 'customPageBackGround.png' | asset_url }}");
    background-repeat: no-repeat;
    background-size: 100% 450px;
    z-index: -1;
    filter: blur(20px);
  }

  .content {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    color: #70645c;
    gap: 15px;
    padding: 0 20px;
  }

  .content > h1 {
    width: 100%;
    font-family: "Playfair Display"
    , serif;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
    font-size: 96px;
  }

  .content > p {
    width: 100%;
    font-family: "Noto Sans"
    , sans-serif;
    font-weight: 300;
    font-style: normal;
    font-size: 26px;
  }

  @media all and (max-width: 599px) {
    .content > h1 {
      font-size: 56px;
      line-height: 1;
    }

    .content > p {
      font-size: 18px;
    }

    .contentContainer {
      width: 100%;
      height: 680px;
      position: relative;
    }

    .contentContainer > .background {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: url("{{ 'customPageBgSm.png' | asset_url }}");
      background-repeat: no-repeat;
      background-size: 100% 680px;
      z-index: -1;
      filter: blur(20px);
    }
  }

</style>

{% schema %}
  {
    "name": "Custom Made",
    "settings": [],
    "presets": [
      {
        "name": "customMade"
      }
    ]
  }
{% endschema %}