<link rel="stylesheet" href="{{'myAccount.css' |  asset_url}}" />
<link rel="stylesheet" href="{{'myAccountMobile.css' |  asset_url}}" />

<div class="myAccountMainContainer">
  <div class="myAccountSidebar">
    <span>
      <h2>My Account</h2>
    </span>

    <div class="accountTabs">
      <p
        class="activeTab"
        onclick="showContent('profileDashboard')"
        data-section="profileDashboard">
        Profile Dashboard
      </p>
      <p onclick="showContent('addressBook')" data-section="addressBook">
        Address Book
      </p>
      <p onclick="showContent('orderHistory')" data-section="orderHistory">
        Order History
      </p>
      <p onclick="showContent('productReview')" data-section="productReview">
        Product Review
      </p>
      <p onclick="showContent('wishlist')" data-section="wishlist">
        Wishlist
      </p>
      <p onclick="showContent('myReturns')" data-section="myReturns">
        My Returns
      </p>
      <p onclick="showContent('timelessClub')" data-section="timelessClub">
        Timeless Club
      </p>
      <p>
        <a href="{{ shop.url }}/pages/Contact-Us">Get In Touch</a>
      </p>
    </div>
  </div>

  <div class="tabContentContainer">
    <div class="tabContent active" id="profileDashboard">
      <div class="sectionHeading">
        <span>
          <h2>Profile Dashboard</h2>
        </span>

        <span>
          <img
            src="{{ 'edit-shape-icon.png' | asset_url }}"
            alt=""
            width=""
            height="" />
          <p>Edit</p>
        </span>
      </div>
      <div class="sectionContent">
        <div class="userSignOut">
          <span>
            <img
              src="{{ 'verified-user-icon.png' | asset_url }}"
              alt=""
              width=""
              height="" />
            <p>Verified User</p>
          </span>

          <p>SIGN OUT</p>
        </div>
        <div class="userDetail">
          <span>
            <p>Name</p>
            <p>{{ customer.first_name }} {{ customer.last_name }}</p>
          </span>

          <span>
            <p>Email ID</p>
            <p>{{ customer.email }}</p>
          </span>
        </div>

        <div class="userDetail">
          <span>
            <p>Mobile Number</p>
            <p>{{ customer.phone }}</p>
          </span>

          <span>
            <p>Password</p>
            <p>
              <a href="/account/password">Change Password</a>
            </p>
          </span>
        </div>
      </div>

      <div class="newsletter">
        <div>
          <h2>Newsletter</h2>
          <span>
            <img
              src="{{ 'toggleIcon.png' | asset_url }}"
              alt=""
              width=""
              height="" />
            <p>On</p>
          </span>
        </div>

        <p>
          You have subscribed to our newsletters! Now you will get updates on offers, articles etc.
        </p>
      </div>

      <div class="whatsApp">
        <div>
          <h2>WhatsApp Updates</h2>
          <span>
            <img
              src="{{ 'toggleIcon.png' | asset_url }}"
              alt=""
              width=""
              height="" />
            <p>On</p>
          </span>
        </div>

        <p>
          Now you will receive updates on
          <span><img
              src="{{ 'whatsapp-app.png' | asset_url }}"
              alt=""
              width=""
              height="" /></span>
          WhatsApp!
        </p>
      </div>
    </div>

    <div class="tabContent" id="addressBook">
      <div class="sectionHeading">
        <span>
          <h2>Address Book</h2>
        </span>

        <span>
          <img
            src="{{ 'edit-shape-icon.png' | asset_url }}"
            alt=""
            width=""
            height="" />
          <p>Add New Address</p>
        </span>
      </div>

      <div class="addressContent">
        {% if customer %}
          {% if customer.default_address %}
            <div class="addressBox">
              <span>
                <img
                  src="{{ 'house-solid-black.png' | asset_url }}"
                  alt=""
                  width=""
                  height=" " />
                <p>Default Address</p>
              </span>

              <div>
                <p>{{ customer.default_address.name }}</p>
                <p>{{ customer.default_address.address1 }},</p>
                <p>{{ customer.default_address.city }}, {{ customer.default_address.province }}</p>
                <p>{{ customer.default_address.country }}, {{ customer.default_address.zip }}</p>
              </div>

              <div>
                <p>{{ customer.default_address.phone }}</p>
              </div>
            </div>
          {% endif %}

          {% if customer.addresses.size > 1 %}
            {% for address in customer.addresses %}
              {% unless address.id == customer.default_address.id %}
                <div class="addressBox">
                  <span>
                    <img
                      src="{{ 'house-solid-gray.png' | asset_url }}"
                      alt=""
                      width=""
                      height="" />
                    <p>Address</p>
                  </span>

                  <div>
                    <p>{{ address.name }}</p>
                    <p>{{ address.address1 }},</p>
                    <p>{{ address.city }}, {{ address.province }}</p>
                    <p>{{ address.country }}, {{ address.zip }}</p>
                  </div>

                  <div>
                    <p>{{ address.phone }}</p>
                  </div>
                </div>
              {% endunless %}
            {% endfor %}
          {% endif %}
        {% endif %}
      </div>
    </div>

    <div class="tabContent" id="orderHistory">
      <div class="sectionHeading">
        <span>
          <h2>Order History</h2>
        </span>

        <span>
          <img
            src="{{ 'edit-shape-icon.png' | asset_url }}"
            alt=""
            width=""
            height="" />
          <p>Reload</p>
        </span>
      </div>

      <div class="orderContent">
        {% if customer %}
          {% if customer.orders.size > 0 %}
            {% for order in customer.orders %}
              <div class="orderBox">
                <div class="orderDetails">
                  <div>
                    <div>
                      <span>
                        <p>Order ID:</p>
                        <p>{{ order.order_number }}</p>
                      </span>
                      <span>
                        <p>Order Value:</p>
                        <p>{{ order.total_price | money }}</p>
                      </span>
                      <span>
                        <p>Contact Details:</p>
                        <p>{{ customer.phone }}</p>
                      </span>
                    </div>
                    <div>
                      <span>
                        <p>Status:</p>
                        <p>{{ order.financial_status }}</p>
                      </span>
                      <span>
                        <p>Return:</p>
                        <p>Return window available till {{ order.created_at | date: "%d/%m/%y" }}</p>
                      </span>
                    </div>
                  </div>
                  <span>
                    <p>Shipping Address:</p>
                    <p>
                      <b>{{ order.shipping_address.name }}</b>
                      - {{ order.shipping_address.address1 }},
                      {{ order.shipping_address.city }}, {{ order.shipping_address.province }},
                      {{ order.shipping_address.country }}, {{ order.shipping_address.zip }}
                    </p>
                  </span>
                </div>
                <button class="viewOrderModalButton" data-order-id="{{ order.id }}">View Details</button>
              </div>

              <!-- Modal of order view details -->
              <dialog class="viewOrderDetailsModal">
                <div>
                  <h2>Order Details</h2>
                  <span class="closeViewOrderModal">
                    <img
                      src="{{'closeIcon.svg' | asset_url}}"
                      alt=""
                      width=""
                      height="" />
                  </span>
                </div>
                <div class="viewOrderDetailBoxLg">
                  <div>
                    <span>
                      <p>Order ID</p>
                      <p>{{ order.order_number }}</p>
                    </span>
                    <span>
                      <p>Total</p>
                      <p>{{ order.total_price | money }}</p>
                    </span>
                  </div>
                  <div>
                    <span>
                      <p>Placed</p>
                      <p>{{ order.created_at | date: "%a, %d %b %Y" }}</p>
                    </span>
                  </div>
                </div>

                <div class="OrderShippingAddresslg">
                  <div>
                    <p>Shipping Address</p>
                  </div>
                  <div>
                    <p>{{ order.shipping_address.name }}</p>
                    <p>
                      {{ order.shipping_address.address1 }},
                      {{ order.shipping_address.city }},
                      {{ order.shipping_address.province }},
                      {{ order.shipping_address.country }} - {{ order.shipping_address.zip }}
                    </p>
                  </div>
                </div>

                <div class="shipmentOrderProductDetail">
                  <div>
                    <p>Shipment Details</p>
                    <p>{{ order.line_items.size }} Item(s) In Shipping</p>
                  </div>

                  <div>
                    <span>
                      <p>Estimated Time of Arrival</p>
                      {% if order.fulfillments.size > 0 %}
                        {% assign fulfillment = order.fulfillments.first %}
                        {% if fulfillment.estimated_delivery_at %}
                          <p>{{ fulfillment.estimated_delivery_at | date: "%a, %d %b %Y" }}</p>
                        {% else %}
                          <p>N/A</p>
                        {% endif %}
                      {% else %}
                        <p>N/A</p>
                      {% endif %}
                    </span>
                    <span>
                      <img
                        src="{{ 'Icon material-twotone-expand-more.png' |  asset_url }}"
                        alt=""
                        width=""
                        height="" />
                    </span>
                  </div>

                  <div>
                    <div>
                      <span>
                        <img
                          src="{{'Group 842.png' | asset_url}}"
                          alt=""
                          width=""
                          height="" />
                        <p>Order Confirmed</p>
                      </span>
                      <span>
                        {% if order.created_at %}
                          <p>{{ order.created_at | date: "%a, %d %b %Y" }}</p>
                        <!-- Display order creation date -->
                        {% else %}
                          <p>N/A</p>
                          <!-- Display "N/A" if creation date is not available -->
                        {% endif %}
                      </span>
                    </div>
                    <span></span>
                    <div>
                      <span>
                        <img
                          src="{{'Group 842.png' | asset_url}}"
                          alt=""
                          width=""
                          height="" />
                        <p>Shipped</p>
                      </span>
                      <span>
                        {% if order.fulfillment.size > 0 %}
                          <p>{{ order.fulfillment.created_at | date: "%a, %d %b %Y" }}</p>
                        <!-- Display first fulfillment creation date -->
                        {% else %}
                          <p>N/A</p>
                          <!-- Display "N/A" if no fulfillment is available -->
                        {% endif %}
                      </span>
                    </div>
                    <span></span>
                    <div>
                      <span>
                        <img
                          src="{{'Group 842.png' | asset_url}}"
                          alt=""
                          width=""
                          height="" />
                        <p>Delivered</p>
                      </span>
                      <span>
                        {% if order.fulfillments.size > 0 and order.fulfillments.first.status == 'delivered' %}
                          <p>{{ order.fulfillments.first.updated_at | date: "%a, %d %b %Y" }}</p>
                        <!-- Display first fulfillment update date -->
                        {% else %}
                          <p>N/A</p>
                          <!-- Display "N/A" if no delivered fulfillment is available -->
                        {% endif %}
                      </span>
                    </div>
                  </div>

                  <!-- Product details loop -->
                  <div class="viewOrderProducts">
                    {% for item in order.line_items %}
                      <div class="viewProductItem">
                        <div>
                          <img
                            src="{{ item.product.image.src | image_url }}"
                            alt="{{ item.product.title }}"
                            width=""
                            height="" />
                        </div>
                        <div>
                          <p>{{ item.product.title }}</p>
                          <span>
                            <p>Qty: {{ item.quantity }}</p>
                            <p>{{ item.price | money }}</p>
                          </span>

                          <span class="showReviewModal">
                            <p>Review this product</p>
                            <img
                              src="{{'4.5 star rating.png' |  asset_url }}"
                              alt=""
                              width=""
                              height="" />
                          </span>
                        </div>
                      </div>

                    {% endfor %}
                  </div>
                </div>

                <!-- Replacement info and button -->
                <div class="replacementiNFOLGButton">
                  <div>
                    <span>
                      <img
                        src="{{'b82196e49ba798cfb429a600366c766c.png' |  asset_url}}"
                        alt=""
                        width=""
                        height="" />
                    </span>
                    <p>Return/replacement period - 7 days from date of purchase</p>
                  </div>
                  <div>
                    <button class="viewOrderModalClose">RETURN THIS ORDER</button>
                  </div>
                </div>

                <!-- Delivery, invoice, and help info -->
                <div class="deliveryInvoiceHelpLg">
                  <div>
                    <span>
                      <p>Courier Partner</p>
                      <p>{{ order.fulfillment.tracking_company }}</p>
                    </span>
                    <span>
                      <p>AWB</p>
                      <p>{{ order.fulfillment.tracking_number }}</p>
                    </span>
                  </div>
                  <div>
                    <span>
                      <p>Download Invoice</p>
                    </span>
                    <span>
                      <img
                        src="{{'downloadIcon.png' |  asset_url }}"
                        alt=""
                        width=""
                        height="" />
                    </span>
                  </div>
                  <div>
                    <span>
                      <p>Need Help</p>
                    </span>
                  </div>
                </div>

                <!-- Payment details -->
                <div class="paymentDetailsLg">
                  <span>
                    <h2>Payment Details</h2>
                  </span>
                  <div>
                    <span>
                      <p>Payment Method</p>
                      <p>{{ order.transaction.gateway }}</p>
                    </span>
                    <span>
                      <p>Subtotal (Inclusive tax)</p>
                      <p>{{ order.subtotal_price | money }}</p>
                    </span>
                    <span>
                      <p>Discount</p>
                      <p>(-){{ order.total_discounts | money }}</p>
                    </span>
                    <span>
                      <p>Shipping charge</p>
                      <p>{{ order.shipping_price | money }}</p>
                    </span>
                    <span>
                      <p>Rewards Points redeemed</p>
                      <p>{{ order.total_discounts | money }}</p>
                    </span>
                    <span>
                      <p>Total:</p>
                      <p>{{ order.total_price | money }}</p>
                    </span>
                  </div>
                  <span>
                    <p>Total savings:</p>
                    <p>{{ order.total_discounts | money }}</p>
                  </span>
                </div>
              </dialog>
            {% endfor %}
          {% else %}
            <p>No orders found.</p>
          {% endif %}
        {% else %}
          <p>Please log in to view order history.</p>
        {% endif %}
      </div>
    </div>

    <div class="tabContent" id="productReview">
      <div class="sectionHeading">
        <span>
          <h2>Product Review</h2>
        </span>

        <span>
          <img
