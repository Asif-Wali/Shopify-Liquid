    <div class="tabContent" id="myReturns">
      <div class="sectionHeading">
        <span>
          <h2>My Returns</h2>
        </span>
        <span>
          <img
            src="{{ 'edit-shape-icon.png' | asset_url }}"
            alt=""
            width=""
            height="" />
          <p>Edit</p>
        </span>
      </div>

