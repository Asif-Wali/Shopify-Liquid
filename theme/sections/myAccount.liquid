          {% for order in returned_orders %}
            <div class="returnBox">
              <div class="returnOrderDetails">
                <div>
                  <div>
                    <span>
                      <p>Order ID:</p>
                      <p>{{ order.order_number }}</p>
                    </span>
                    <span>
                      <p>Order Value:</p>
                      <p>{{ order.total_price | money }}</p>
                    </span>
                    <span>
                      <p>Contact Details:</p>
                      <p>{{ order.billing_address.phone }}</p>
                    </span>
                  </div>
                  <div>
                    <span>
                      <p>Status:</p>
                      <p>{{ order.financial_status }}</p>
                    </span>
                    <span>
                      <p>Return:</p>
                      <p>Return initiated on {{ order.created_at | date: "%d/%m/%Y" }}</p>
                    </span>
                  </div>
                </div>
                <span>
                  <p>Shipping Address:</p>
                  <p>
                    <b>{{ order.shipping_address.name }}</b>
                    -
